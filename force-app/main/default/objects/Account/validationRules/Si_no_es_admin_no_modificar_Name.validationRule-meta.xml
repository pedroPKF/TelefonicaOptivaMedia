<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Si_no_es_admin_no_modificar_Name</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(Name), NOT($Permission.Account_modify_Name))</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Privilegios insuficientes para editar el campo</errorMessage>
</ValidationRule>
